<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ImageView
    android:layout_marginTop="100dp"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:src="@drawable/logo13"
    />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#3F51B5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="ইসলামিক সঙ্গী"
        android:fontFamily="@font/kingthings_exeter" />

        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:maxHeight="8dp" />


        <com.airbnb.lottie.LottieAnimationView
            android:layout_gravity="center"
            android:id="@+id/animationView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/loadingsp"
            app:lottie_loop="true"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/my"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>



    <TextView
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#000C4C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="পরিকল্পনা ও বাস্তবায়ন"
        android:fontFamily="@font/roboto_medium" />
    <View
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:textColor="#025705"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="মোঃ ইমতিয়াজুল ইসলাম"
        android:fontFamily="@font/roboto_regular" />
    <TextView
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:textColor="#05599C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="ডেভেলপার"
        android:fontFamily="@font/roboto_regular" />




</LinearLayout>
