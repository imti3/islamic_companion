<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/round_corner_square_20"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:backgroundTint="@color/ltwhite">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_favorite_border"
                />

            <TextView
                android:textSize="18dp"
                android:id="@+id/tvArabicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اللَّهُمَّ افْتَحْ لِي أَبْوَابَ رَحْمَتِكَ"
                android:fontFamily="@font/biko_regular_400" />
        </LinearLayout>

        <View
            android:background="#bebebe"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16dp"
            android:textColor="@color/grey"
            android:id="@+id/tvArabicTranslation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bismi Allahi alrrahmani alrraheemi"
            android:fontFamily="@font/biko_regular_400" />

        <TextView
            android:textColor="@color/green"
            android:id="@+id/tvEnglishName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="In the name of Allah, Most Gracious, Most Merciful."
            android:fontFamily="@font/biko_regular_400" />

        <TextView
            android:id="@+id/tvBangla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="3dp"
            android:text="শুরু করছি আল্লাহর নামে যিনি পরম করুণাময়, অতি দয়ালু।"
            android:fontFamily="@font/biko_regular_400" />
    </LinearLayout>
</LinearLayout>
